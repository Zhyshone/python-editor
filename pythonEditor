<link rel="stylesheet" href="https://pyscript.net/latest/pyscript.css" />
<script defer src="https://pyscript.net/latest/pyscript.js"></script>
<style>
body { font-family: Arial; padding: 20px; }
.container { display: flex; gap: 20px; flex-wrap: wrap; }
.editor, .output { flex: 1; min-width: 300px; }
textarea { width: 100%; height: 350px; font-family: monospace; font-size: 14px; }
pre { width: 100%; height: 350px; background: #111; color: #0f0; padding: 10px; overflow-y: auto; border-radius: 4px; }
button { margin-top: 10px; padding: 8px 16px; font-size: 14px; cursor: pointer; }
</style>
</head>
<body>

<h2>Python Editor for Canvas LMS</h2>

<div class="container">
    <div class="editor">
        <h3>Python Code</h3>
        <textarea id="code">
# Welcome! Type Python code here
print("Hello, Python!")
        </textarea>
        <div>
            <button onclick="runCode()">Run Code</button>
            <button onclick="clearOutput()">Clear Output</button>
        </div>
    </div>

    <div class="output">
        <h3>Output</h3>
        <pre id="output"></pre>
    </div>
</div>

<script>
async function runCode() {
    const code = document.getElementById("code").value;
    const outputEl = document.getElementById("output");
    outputEl.textContent = "Running...\n";

    try {
        const result = await pyscript.runtime.run(code);
        outputEl.textContent = result;
    } catch (err) {
        outputEl.textContent = "Error:\n" + err;
    }
}

function clearOutput() {
    document.getElementById("output").textContent = "";
}
</script>

</body>
